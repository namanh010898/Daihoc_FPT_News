<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">


    <!-- Latest compiled and minified JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>




</head>

<body>
    <div>
        <div class="container" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),url('https://daihoc.fpt.edu.vn/templates/fpt-university/images/header.jpg'); height: 370px; padding: 140px;">
            <h2 style="text-align:center;color:white">TIN TỨC CHUNG</h2>
        </div>
        <div class="container">
            @for (int i = 0; i < ViewBag.PostCount; i++)
            {
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4" style="padding-top:2%">

                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <a href="/detail/@ViewBag.Posts[i].Url"><img src="@ViewBag.Posts[i].Photo" style="width:100%;height:190px;" /></a>
                </div>

                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <a href="/detail/@ViewBag.Posts[i].Url"><p>@ViewBag.Posts[i].Name</p></a>
                    <p>@ViewBag.Posts[i].CreatedTime</p>
                </div>

            </div>
            }


        </div>


    </div>

</body>

</html>